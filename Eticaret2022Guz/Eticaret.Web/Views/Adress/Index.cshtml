@{
    ViewData["Title"] = "Index";
}
@model List<Adress>

<h2> Adreslerimiz </h2>
<br />
<table class="table table-bordered">

    <thead>
        <tr>
            <th>AdressId</th>
            <th>AdressName</th>
            <th>CityName</th>
            <th>TownName</th>
            <th>NeighborhoodName</th>
            <th>AdressDescription</th>
            <th>AdressStatus</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var adress in Model)
        {
            <tr>
                <td>@adress.AdressId</td>
                <td>@adress.AdressName</td>
                <td>@adress.CityName</td>
                <td>@adress.TownName</td>
                <td>@adress.NeighborhoodName</td>
                <td>@adress.AdressDescription</td>
                <td>@adress.AdressStatus</td>
               

                <td>
                    <a class="btn btn-danger" asp-controller="Adress" asp-action="Delete" asp-route-id="@adress.AdressId"> Silme</a>&nbsp;
                    <a class="btn btn-secondary" asp-controller="Adress" asp-action="Update" asp-route-id="@adress.AdressId"> Güncelle</a>&nbsp;
                </td>
            </tr>
        }
    </tbody>
</table>
<a class="btn btn-primary " asp-area="" asp-controller="Adress" asp-action="Add">Ekle</a>
