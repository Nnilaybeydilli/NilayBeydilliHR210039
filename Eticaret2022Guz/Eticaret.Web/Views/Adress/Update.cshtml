@{
    ViewData["Title"] = "Adres Güncelleme";
}
@model Adress

<h1> Adres Güncelleme </h1>
<br />
<div class="row">

    <form asp-action="Update" asp-controller="Adress" method="post">
        <input  type="hidden" asp-for="AdressId"/>
         <input  type="hidden" asp-for="AdressStatus"/>
        <div class="form-group">
            <label asp-for="AdressName"></label>
            <input asp-for="AdressName" type="text" class="form-control" />
            <span asp-validation-for="AdressName" class="text-danger"></span>
        </div>
         <div class="form-group">
            <label asp-for="CityName"></label>
            <input asp-for="CityName" type="text" class="form-control" />
            <span asp-validation-for="CityName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="TownName"></label>
            <input asp-for="TownName" type="text" class="form-control" />
            <span asp-validation-for="TownName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="NeighborhoodName"></label>
            <input asp-for="NeighborhoodName" type="text" class="form-control" />
            <span asp-validation-for="NeighborhoodName" class="text-danger"></span>
        </div>
       
        @*        <div class="form-group">
            <label asp-for="CategoryStatus"></label>
            <select asp-for="CategoryStatus" asp-items="ViewBag.Status" class="form-control"></select>
        </div>*@

        <div class="form-group mt-2">
            <input type="submit" class="btn-primary" value="Kaydet" />
        </div>
    </form>
</div>