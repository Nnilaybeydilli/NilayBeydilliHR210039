@{
    ViewData["Title"] = "Marka  Ekle";
}
@model Brand

<h1> Marka Ekleme </h1>
<br />
<div class="row">

    <form asp-action="Add" asp-controller="Brand" method="post">

        <div class="form-group">
            <label asp-for="BrandName"></label>
            <input asp-for="BrandName" type="text" class="form-control"/>
            <span asp-validation-for="BrandName" class="text-danger"></span>
        </div>


       
        <div class="form-group mt-2">
            <input type="submit" class="btn-primary" value="Ekle"/>
        </div>
    </form>
</div>