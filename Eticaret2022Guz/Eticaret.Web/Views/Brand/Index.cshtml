@{
    ViewData["Title"] = "Index";
}
@model List<Brand>

<h2> Markalarımız </h2>
<br />
<table class="table table-bordered">

    <thead>
        <tr>
            <th>BrandId</th>
            <th>BrandName</th>
            <th>Durumu</th>
            <th>BrandStatu No</th>
           


        </tr>
    </thead>
    <tbody>
        @foreach (var brand in Model)
        {
            <tr>
                <td>@brand.BrandId</td>
                <td>@brand.BrandName</td>
                <td>@brand.BrandStatu</td>
                
                <td>
                    <a class="btn btn-danger" asp-controller="Brand" asp-action="Delete" asp-route-id="@brand.BrandId"> Silme</a>&nbsp;
                    <a class="btn btn-secondary" asp-controller="Brand" asp-action="Update" asp-route-id="@brand.BrandId"> Güncelle</a>&nbsp;
                </td>
            </tr>
        }
    </tbody>
</table>
<a class="btn btn-primary " asp-area="" asp-controller="Brand" asp-action="Add">Ekle</a>
