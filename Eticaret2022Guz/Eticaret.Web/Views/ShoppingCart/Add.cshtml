@{
    ViewData["Title"] = "ShoppingCart Ekle";
}
@model ShoppingCart

<h1> ShoppingCart Ekleme </h1>
<br />
<div class="row">

    <form asp-action="Add" asp-controller="ShoppingCart" method="post">
        <div class="form-group">
            <label asp-for="quantity"></label>
            <input asp-for="quantity" type="text" class="form-control" />
            <span asp-validation-for="quantity" class="text-danger"></span>
        </div>
         <div class="form-group">
            <label asp-for="price"></label>
            <input asp-for="price" type="text" class="form-control" />
            <span asp-validation-for="price" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="productID"></label>
            <input asp-for="productID" type="number" class="form-control" />
            <span asp-validation-for="productID" class="text-danger"></span>
        </div>
       
        <div class="form-group mt-2">
            <input type="submit" class="btn-primary" value="Ekle"/>
        </div>
    </form>
</div>