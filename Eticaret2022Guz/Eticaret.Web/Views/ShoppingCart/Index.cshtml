@{
    ViewData["Title"] = "Index";
}
@model List<ShoppingCart>

<h2> Alışveriş Kartı  </h2>
<br />
<table class="table table-bordered">

    <thead>
        <tr>
            <th>cartid</th>
            <th>quantity</th>
            <th>price</th>
            <th>productID</th>
            <th>İşlem</th>



        </tr>
    </thead>
    <tbody>
        @foreach (var shoppingCart in Model)
        {
            <tr>
                <td>@shoppingCart.cartid</td>
                <td>@shoppingCart.quantity</td>
                <td>@shoppingCart.price</td>
                <td>@shoppingCart.productID</td>

                <td>
                    <a class="btn btn-danger" asp-controller="ShoppingCart" asp-action="Delete" asp-route-id="@shoppingCart.cartid"> Silme</a>&nbsp;
                    <a class="btn btn-secondary" asp-controller="ShoppingCart" asp-action="Update" asp-route-id="@shoppingCart.cartid"> Güncelle</a>&nbsp;
                </td>
            </tr>
        }
    </tbody>
</table>
<a class="btn btn-primary " asp-area="" asp-controller="ShoppingCart" asp-action="Add">Ekle</a>
