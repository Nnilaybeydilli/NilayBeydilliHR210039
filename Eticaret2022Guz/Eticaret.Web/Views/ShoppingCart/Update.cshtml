@{
    ViewData["Title"] = "Alışveriş Kartı Güncelleme";
}
@model ShoppingCart

<h1> Alışveriş Kartı  Güncelleme </h1>
<br />
<div class="row">

    <form asp-action="Update" asp-controller="ShoppingCart" method="post">
        <input type="hidden" asp-for="cartid" />
        <input type="hidden" asp-for="Status" />
        <div class="form-group">
            <label asp-for="quantity"></label>
            <input asp-for="quantity" type="text" class="form-control" />
            <span asp-validation-for="quantity" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="price"></label>
            <input asp-for="price" type="text" class="form-control" />
            <span asp-validation-for="price" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="productID"></label>
            <input asp-for="productID" type="text" class="form-control" />
            <span asp-validation-for="productID" class="text-danger"></span>
        </div>


        @*        <div class="form-group">
            <label asp-for="CategoryStatus"></label>
            <select asp-for="CategoryStatus" asp-items="ViewBag.Status" class="form-control"></select>
        </div>*@

        <div class="form-group mt-2">
            <input type="submit" class="btn-primary" value="Kaydet" />
        </div>
    </form>
</div>